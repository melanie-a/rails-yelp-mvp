<%= render 'navbar', restaurant: @restaurant %>

<%= @restaurant.name %>
<br><%= @restaurant.address %>
<br><%= @restaurant.category %>
<% @restaurant.reviews.each do |review| %>
<br><%= review.rating %> - <%= review.content %>
<% end %>

<%# <br><%= link_to "add review", new_restaurant_review_path(@restaurant) %> %>

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.input :content %>
    <%= f.submit %>
  <% end %>
</div>

<br><%= link_to 'Back to all restaurants', restaurants_path %>
